{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": ["node_modules/*", "dist/*", "pnpm-lock.yaml"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConstEnum": "off"
			},
			"style": {
				"useEnumInitializers": "off",
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	}
}
