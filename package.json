{
	"name": "cozyhive-bot",
	"private": true,
	"repository": "https://github.com/almeidx/cozyhive-bot",
	"license": "GPL-3.0",
	"author": "Almeida <almeidx@pm.me> (https://almeidx.dev)",
	"type": "module",
	"scripts": {
		"build": "pnpm build:check && pnpm build:write",
		"build:check": "tsc --noEmit",
		"build:write": "rimraf dist && esbuild \"src/**/*.ts\" --outdir=dist --platform=node --target=node18 --format=esm --sourcemap",
		"fmt": "pnpm format",
		"format": "dprint fmt && biome check --apply .",
		"lint": "dprint check && biome check .",
		"start": "node --enable-source-maps dist/index.js",
		"start:env": "node -r dotenv/config --enable-source-maps dist/index.js",
		"start-dev": "pnpm build:write && node -r dotenv/config --enable-source-maps dist/index.js"
	},
	"imports": {
		"#listeners/*": "./dist/listeners/*",
		"#utils/*": "./dist/utils/*"
	},
	"dependencies": {
		"@discordjs/core": "^1.0.1",
		"@discordjs/rest": "^2.0.1",
		"@discordjs/ws": "^1.0.1",
		"colorette": "^2.0.20"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.0.0",
		"@types/node": "^20.5.9",
		"dotenv": "^16.3.1",
		"dprint": "^0.40.2",
		"esbuild": "^0.19.2",
		"rimraf": "^5.0.1",
		"typescript": "~5.2.2"
	},
	"packageManager": "pnpm@8.6.12"
}
